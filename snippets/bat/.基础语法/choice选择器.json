{
  "choice.tmpl": {
    "prefix": ["loop_menu=choice"],
    "body": [
      ":loop_menu",
      "ECHO ==========================",
      "ECHO [目录导航]",
      "ECHO    [1] 指令 1",
      "ECHO    [2] 指令 2",
      "ECHO    [3] 指令 3",
      "ECHO ==========================",
      "ECHO 请直接按键执行命令...",
      "@REM 使用 PowerShell 捕获按键",
      "for /f \"delims=\" %%k in ('powershell -command \"\\$key = [System.Console]::ReadKey(\\$true).KeyChar; Write-Host \\$key\"') do (",
      "    set \"key=%%k\"",
      ")",
      "",
      "",
      "@REM 根据按键执行命令",
      "if \"!key!\"==\"1\" (",
      "    call :label_1",
      ") else if \"!key!\"==\"2\" (",
      "    call :label_2",
      ") else if \"!key!\"==\"3\" (",
      "    call :label_3",
      ") else (",
      "    exit /B",
      ")",
      "",
      "@REM ==========================",
      ":label_1",
      "ECHO 执行指令 1 的操作...",
      "",
      "goto :loop_menu",
      "@REM ==========================",
      ":label_2",
      "ECHO 执行指令 2 的操作...",
      "",
      "goto :loop_menu",
      "@REM ==========================",
      "",
      ":label_3",
      "ECHO 执行指令 3 的操作...",
      "",
      "goto :loop_menu",
      "@REM ==========================",
      ""
    ],
    "description": ["choice.tmpl"]
  }
}
